{
  "extends": "@electron-toolkit/tsconfig/tsconfig.web.json",
  "include": [
    "src/renderer/src/env.d.ts",
    "src/renderer/src/**/*",
    "src/renderer/src/**/*.vue",
    "src/preload/*.d.ts"
  ],
  "compilerOptions": {
    "moduleResolution": "bundler",
    "composite": true,
    "baseUrl": ".",
    "paths": {
      "@renderer/*": [
        "src/renderer/src/*"
      ],
      "@view": [
        "src/renderer/src/views/*"
      ],
      "@libs": [
        "src/renderer/src/Libs/*"
      ],
      "@store": [
        "src/renderer/src/store/*"
      ],
    }
  },
  "vueCompilerOptions": {
    "globalTypesPath": "./.vue-global-types/global.d.ts"
  }
}